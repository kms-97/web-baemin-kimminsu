extends base.pug
block css
    link(rel="stylesheet", href="css/detail.css")

block content
    header#header
        button#header-backwardBtn
            img(src='../img/arrow.svg')
        div.container
            div#header-wrap
                div#header-title 회원가입
        button#header-nextBtn 완료
    section#email
        div.container
            div#email-wrap
                label#email-label
                    | 이메일
                    input(type='email')
                    div#email-valitdate.validate
                    button#email-remove.remove
                        img(src='../img/cancel.png')
                button#email-duplicate 중복확인
    section#nickname
        div.container
            label#nickname-wrap
                | 닉네임
                input(type='text')
                div#nickname-valitdate.validate
                button#nickname-remove.remove
                    img(src='../img/cancel.png')
    section#password
        div.container
            label#password-wrap
                | 비밀번호
                input(type='password')
                div#phone-valitdate.validate
                button#phone-remove.remove
                    img(src='../img/cancel.png')
    section#birth
        div.container
            label#birth-wrap
                | 생년월일
                input(type='text')
                div#birth-valitdate.validate
                button#birth-remove.remove
                    img(src='../img/cancel.png')


